<resources>

    <style name="default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_default_style</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
        <attr name="shimmer_mask_width" format="float|reference"/>
        <attr name="shimmer_gradient_center_color_width" format="float|reference"/>
        <attr name="shimmer_reverse_animation" format="boolean|reference"/>
    </declare-styleable>

    <style name="btn">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
